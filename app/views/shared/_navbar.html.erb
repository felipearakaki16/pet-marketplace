<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
  <%= image_tag "k.jpeg", class:"perfil" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <%= simple_form_for :search, url: root_path, method: :get, :html=> { class: "d-flex align-items-center search-form-control mr-5", id: "search-form" } do |f| %>
        <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for a cocktail"/>
        <%= link_to  "/#", type: "submit", class: "btn-search ml-2" do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%# <%= link_to "Messages", "#", class: "nav-link" %>
          <%# <%= link_to "Add new product", "/products/new", class: "nav-link" %>
          <%# <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, width: 80, height: 80, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag 'https://kitt.lewagon.com/placeholder/users/random', width: 80, height: 80, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "All products", products_path, class: "dropdown-item" %>
            <%= link_to "Add new product", "/products/new", class: "dropdown-item" %>
            <%= link_to "My purchased products", user_purchased_path, class: "dropdown-item" %>
            <%= link_to "My announced products", user_announced_path, class: "dropdown-item" %>
            <%# <%= link_to "Search products", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path %>
          <%= link_to "Sing up", new_user_registration_path %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
