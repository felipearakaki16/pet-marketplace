<div class="slick-modal">
  <%= image_tag  "https://source.unsplash.com/1600x500/?cat", class: "d-block w-100" %>
  <%= image_tag  "https://source.unsplash.com/1600x500/?dog", class: "d-block w-100" %>
  <%= image_tag  "https://source.unsplash.com/1600x500/?bunny", class: "d-block w-100" %>
</div>
<div class="inline">
  <h3>Categorias em destaque</h3>
  <div>
  <a href="/products/dog" class="btn-category"><%= image_tag  "dog" %></a>
  <a href="/products/cat" class="btn-category"><%= image_tag  "cat" %></a>
  <a href="/products/fish" class="btn-category"><%= image_tag  "fish" %></a>
  <a href="/products/rodent" class="btn-category"><%= image_tag  "rabbit" %></a>
  </div>
</div>
<div class="cards-home">
  <% @products.each do |product| %>
    <%= link_to  product_path(product.id) do %>
      <div class="card-product">
        <div class="nav-card">
          <div class="card-details">
            <p class="product-name"><%= product.name %></p>
            <p class="from">from <em class="username"><%= product.user.name %></em></p>
          </div>
        </div>
          <% if product.photos.attached? %>
            <%= cl_image_tag product.photos.first.key, class: "product-img-card", width: 300, height: 300 %>
          <% else %>
            <%= cl_image_tag("te2dj0lrofc7oo8m1xgb.jpg", class: "product-img-card", width: 300, height: 300) %>
          <% end %>
          <div class="price">
            <p>R$<%= product.price %></p>
          </div>
      </div>
    <% end %>
  <% end %>
</div>
