<h1>Details from: <%= @product.name %> </h1>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% @product.photos.each do |photo| %>
      <% if @product.photos.first == photo %>
        <div class="carousel-item active">
      <% else %>
        <div class="carousel-item">
      <% end %>
        <%= cl_image_tag photo.key, class: "d-block w-100" %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<p>Price: $<%= @product.price %></p>
<p><%= @product.tag_list %></p>
<p>Announced by user: <%= @product.user.id %></p>
<p>Published on: <%= @product.created_at %></p>
<p>Updated on: <%= @product.updated_at %></p>
<% if @product.avaiable && @product.user != current_user %>
  <%= link_to "Buy product",
  orders_path(product_id: @product.id),
  method: :post %>
<% end %>
